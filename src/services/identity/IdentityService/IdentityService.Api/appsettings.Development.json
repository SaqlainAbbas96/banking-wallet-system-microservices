{
  "ConnectionStrings": {
    "IdentityDb": "Host=localhost;Port=5433;Database=identity;Username=postgres;Password=Postgres123."
  },
  "Jwt": {
    "Secret": "YourSuperSecretKey123!",
    "Issuer": "identity-service",
    "Audience": "banking-wallet-system",
    "AccessTokenExpiryMinutes": 30
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Service} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/identity-service-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithEnvironmentName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "Service": "IdentityService"
    }
  },
  "AllowedHosts": "*"
}